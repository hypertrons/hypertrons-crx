{
  "categories": [
    {
      "title": "## 🎉 Features",
      "labels": ["feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 📚 Documentation Changes",
      "labels": ["docs"]
    },
    {
      "title": "## 💄 Style Changes",
      "labels": ["style"]
    },
    {
      "title": "## 🚀 Performance Improvements",
      "labels": ["perf"]
    },
    {
      "title": "## 🏗️ Build System",
      "labels": ["build"]
    },
    {
      "title": "## 🧹 Chores",
      "labels": ["chore"]
    },
    {
      "title": "## ♻️ Refactor",
      "labels": ["refactor"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
      "title": "## 💚 CI",
      "labels": ["ci"]
    },
    {
      "title": "## 💬 Other",
      "labels": ["other"]
    },
    {
      "title": "## 📦 Dependencies",
      "labels": ["dependencies"]
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(feat|fix|docs|style|perf|build|chore|refactor|test|ci)",
      "flags": "gui",
      "on_property": "title",
      "method": "match"
    }
  ],
  "pr_template": "- ${{TITLE}}  #${{NUMBER}}"
}
